<h1>Nova Receita</h1>
<% if flash[:error] %>
  <div class="error">
    <%= flash[:error] %>
    <% @recipe.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  </div>
<% end %>
<%= form_for(@recipe) do |f| %>
  <div>
    <%= f.label :title, 'TÃ­tulo' %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :recipe_type, 'Tipo da Receita' %>
    <%= f.text_field :recipe_type %>
  </div>
  <div>
    <%= f.label :cuisine_id  %>
    <%= f.collection_select :cuisine_id, @cuisines, :id, :name  %>
  </div>
  <div>
    <%= f.label :difficulty, 'Dificuldade' %>
    <%= f.text_field :difficulty %>
  </div>
  <div>
    <%= f.label :cook_time, 'Tempo de Preparo' %>
    <%= f.text_field :cook_time %>
  </div>
  <div>
    <%= f.label :ingredients, 'Ingredientes' %>
    <%= f.text_area :ingredients %>
  </div>
  <div>
    <%= f.label :method, 'Como Preparar' %>
    <%= f.text_area :method %>
  </div>
  <%= f.submit 'Enviar' %>
<% end %>
